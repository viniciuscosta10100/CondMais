<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/marcacomp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:tag="1"
            android:id="@+id/btnAgenda"
            android:clickable="true"
            android:background="@drawable/shape_btn_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_mural"/>

            <TextView
                android:id="@+id/text"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-light"
                android:text="MURAL"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:tag="2"
            android:id="@+id/btnMensagens"
            android:clickable="true"
            android:background="@drawable/shape_btn_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_message"/>

            <TextView
                android:id="@id/text"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="MENSAGENS"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgCondominio"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_alfa"/>

            <View
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_principal"/>
            <View
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_principal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
                android:id="@+id/llPerfil"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp">
                    <View
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_bg_middle"></View>
                    <!--<com.loopj.android.image.SmartImageView-->
                    <!--android:id="@+id/imgPerfil"-->
                    <!--android:layout_width="89dp"-->
                    <!--android:layout_height="89dp"-->
                    <!--android:scaleType="centerCrop"-->
                    <!--android:src="@drawable/nos"/>-->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="88dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_height="88dp"
                        android:id="@+id/imgPerfil"
                        />
                </FrameLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:text="MVSC"/>
                    <TextView
                        android:id="@+id/lblCondominio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:shadowColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"
                        android:textSize="14sp"
                        android:text="LAGOA DO MUNDAÚ"/>
                    <TextView
                        android:id="@+id/lblBloco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:shadowColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="3"
                        android:textSize="14sp"
                        android:text="BLOCO C - APT. 102"/>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:tag="3"
            android:id="@+id/btnEnquetes"
            android:clickable="true"
            android:background="@drawable/shape_btn_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_agenda"/>

            <TextView
                android:id="@id/text"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-light"
                android:text="RESERVAS"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:tag="4"
            android:id="@+id/btnAvisos"
            android:clickable="true"
            android:background="@drawable/shape_btn_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_chamado"/>

            <TextView
                android:id="@id/text"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-light"
                android:text="REIVINDICAÇÕES"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>