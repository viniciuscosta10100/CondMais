<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">



            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:mcv_showOtherDates="defaults"
                app:mcv_arrowColor="#ffffff"
                app:mcv_weekDayTextAppearance="@style/CustomDayTextAppearanceMedium"
                app:mcv_dateTextAppearance="@style/CustomDayTextAppearance"
                app:mcv_headerTextAppearance="@style/CustomDayTextAppearanceMedium"
                app:mcv_selectionColor="@color/color_principal"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>